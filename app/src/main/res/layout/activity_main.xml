<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_beige"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText,ContentDescription,RtlSymmetry,RtlHardcoded">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smartkhet"
                android:textColor="@color/primary_green"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smartkhet"
                android:textColor="@color/text_dark"
                android:textStyle="bold"
                android:textSize="32sp"
                android:layout_marginTop="-4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vellore, TamilNadu"
                android:textColor="@color/text_grey"
                android:textSize="14sp"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/weather_yellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@android:drawable/ic_menu_day"
                        app:tint="#e65100"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Today"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#e65100"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/weather_temp_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31°C"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"/>

                <TextView
                    android:id="@+id/weather_desc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partly cloudy • 40% rain"
                    android:textSize="10sp"
                    android:textColor="@color/text_grey"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/header_section"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="20dp"
            android:paddingTop="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_bg"
                android:layout_marginBottom="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Farm health"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark"/>

                        <TextView
                            android:id="@+id/farm_health_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="● Good"
                            android:background="@drawable/badge_bg"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:textColor="@color/primary_green"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/ic_menu_compass"
                                app:tint="#2196f3"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Soil moisture"
                                android:textSize="11sp"
                                android:textColor="@color/text_grey"
                                android:layout_marginTop="4dp"/>

                            <TextView
                                android:id="@+id/soil_moisture_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Optimal"
                                android:textStyle="bold"
                                android:textColor="@color/text_dark"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/ic_menu_view"
                                app:tint="#ff7043"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pest risk"
                                android:textSize="11sp"
                                android:textColor="@color/text_grey"
                                android:layout_marginTop="4dp"/>

                            <TextView
                                android:id="@+id/pest_risk_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Low"
                                android:textStyle="bold"
                                android:textColor="@color/text_dark"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/ic_dialog_alert"
                                app:tint="#ffa000"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Extreme weather"
                                android:textSize="11sp"
                                android:textColor="@color/text_grey"
                                android:layout_marginTop="4dp"/>

                            <TextView
                                android:id="@+id/weather_alert_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="None"
                                android:textStyle="bold"
                                android:textColor="@color/text_dark"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_bg"
                android:layout_marginBottom="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Today's actions"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark"/>
                        <TextView
                            android:id="@+id/viewAllBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View all"
                            android:textColor="@color/primary_green"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">
                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/circle_light_bg">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_menu_camera"
                                android:layout_gravity="center"
                                app:tint="@color/primary_green"/>
                        </FrameLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">
                            <TextView
                                android:id="@+id/act1_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Irrigate Plot 1"
                                android:textStyle="bold"
                                android:textColor="@color/text_dark"/>
                            <TextView
                                android:id="@+id/act1_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20 mm water recommended"
                                android:textSize="12sp"
                                android:textColor="@color/text_grey"/>
                            <TextView
                                android:id="@+id/act1_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Today, 5:30 PM"
                                android:textSize="10sp"
                                android:textColor="#9e9e9e"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">
                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/circle_light_bg">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_menu_view"
                                android:layout_gravity="center"
                                app:tint="@color/primary_green"/>
                        </FrameLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">
                            <TextView
                                android:id="@+id/act2_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Apply organic pest spray"
                                android:textStyle="bold"
                                android:textColor="@color/text_dark"/>
                            <TextView
                                android:id="@+id/act2_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tomato field"
                                android:textSize="12sp"
                                android:textColor="@color/text_grey"/>
                            <TextView
                                android:id="@+id/act2_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Today, 6:00 PM"
                                android:textSize="10sp"
                                android:textColor="#9e9e9e"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_bg"
                android:layout_marginBottom="24dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sustainability snapshot"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Details"
                            android:textColor="@color/primary_green"
                            android:textStyle="bold"
                            android:id="@+id/sustainabilityDetailsBtn"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingEnd="16dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Score"
                                android:textSize="12sp"
                                android:textColor="@color/text_grey"/>

                            <TextView
                                android:id="@+id/score_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="78"
                                android:textColor="@color/primary_green"
                                android:textStyle="bold"
                                android:textSize="32sp"/>

                            <ProgressBar
                                android:id="@+id/score_progress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="6dp"
                                android:progress="78"
                                android:progressTint="@color/primary_green"
                                android:backgroundTint="@color/progress_grey"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Water use efficiency"
                                android:textSize="11sp"
                                android:textColor="@color/text_grey"/>

                            <TextView
                                android:id="@+id/water_efficiency_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Good"
                                android:textStyle="bold"
                                android:layout_marginBottom="6dp"
                                android:textColor="@color/text_dark"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Carbon footprint"
                                android:textSize="11sp"
                                android:textColor="@color/text_grey"/>

                            <TextView
                                android:id="@+id/carbon_footprint_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Improving"
                                android:textStyle="bold"
                                android:textColor="@color/text_dark"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circle_green_bg">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_input_add"
                            android:layout_gravity="center"
                            app:tint="@color/white"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Crop"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_dark"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circle_green_bg">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_compass"
                            android:layout_gravity="center"
                            app:tint="@color/white"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Sensors"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_dark"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circle_green_bg">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_dialog_email"
                            android:layout_gravity="center"
                            app:tint="@color/white"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ask Expert"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_dark"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circle_green_bg">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_sort_by_size"
                            android:layout_gravity="center"
                            app:tint="@color/white"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marketplace"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_dark"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu"

        app:itemIconTint="@color/primary_green"
        app:itemTextColor="@color/primary_green"

        app:labelVisibilityMode="labeled"
        app:itemPaddingTop="8dp"
        app:itemPaddingBottom="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>